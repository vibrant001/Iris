<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#CCCCFF"

        android:backgroundTint="#CCCCFF"
        app:circularflow_defaultRadius="20dp"
        app:circularflow_radiusInDP="20dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">




        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/chats"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginTop="@dimen/_53sdp"
                android:layout_marginLeft="@dimen/_47sdp"

                app:srcCompat="@drawable/profile" />

            <ImageView
                android:id="@+id/cam"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginTop="@dimen/_50sdp"

                android:layout_marginLeft="@dimen/_147sdp"
                app:srcCompat="@drawable/story" />

            <ImageView
                android:id="@+id/logout"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginTop="@dimen/_51sdp"
                android:layout_marginLeft="@dimen/_242sdp"
                app:srcCompat="@drawable/logout" />

            <ImageView
                android:id="@+id/settings"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/_270sdp"
                android:layout_marginTop="13dp"
                app:srcCompat="@drawable/settings" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/alfa_slab_one"
                android:text="IRIS"
                android:textColor="@color/black"
                android:textSize="@dimen/_25sdp" />

        </FrameLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="611dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>